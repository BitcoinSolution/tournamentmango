
html(ng-app='openchallenge', ng-controller="rootController")
  head
    title OpenChallenge
    link(rel="stylesheet", href="css/lib.min.css")
    link(rel="stylesheet", href="css/main.min.css")

  body(layout="column", ng-cloak)

    md-toolbar(layout="row", ng-controller="navController", ng-include="'navbar'")

    div(layout="row", flex)
      md-sidenav.md-sidenav-left.md-whiteframe-z2(layout="column", ng-if="sidebar.hasSidebar", md-is-locked-open="$mdMedia('gt-sm')", md-component-id="left", ui-view="sidebar")
      div(layout="column", flex)
        md-content(layout="column", layout-padding, flex, ui-view="content")

    script(src='js/main.min.js')
